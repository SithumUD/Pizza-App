<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activities.admin.ProductManageActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E53E3E"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backicon"
            app:tint="#FFFFFF"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product Management"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Category Tabs -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_bg"
                android:text="All"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tabClassic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic"
                android:textColor="#666666"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tabSpicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy"
                android:textColor="#666666"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tabDesserts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desserts"
                android:textColor="#666666"
                android:textSize="14sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Products Header and Add Button -->
    <LinearLayout
        android:id="@+id/productsHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoryScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Products"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addProductButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/chip_bg"
            android:text="+ Add Product"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Products RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/productsHeaderLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product_manage" />

    <!-- Delete Confirmation Dialog (Initially Hidden) -->
    <FrameLayout
        android:id="@+id/deleteDialogOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Deletion"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Are you sure you want to delete this product? This action cannot be undone."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/cancelDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/chip_bg"
                        android:text="Cancel"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="12dp"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/confirmDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/chip_bg"
                        android:text="Delete"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:paddingHorizontal="20dp"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Product Detail/Edit Overlay (Initially Hidden) -->
    <FrameLayout
        android:id="@+id/productDetailOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="600dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Product Detail Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/productDetailTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Margherita"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <ImageView
                            android:id="@+id/closeDetailButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/closeicon"
                            app:tint="#666666" />

                    </LinearLayout>

                    <!-- Product Image and Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <ImageView
                            android:id="@+id/productDetailImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_image_bg"
                            android:src="@drawable/pizza"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/productDetailDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fresh tomatoes, mozzarella, basil"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/productDetailPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="LKR 1,200"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#E53E3E" />

                                <TextView
                                    android:id="@+id/productDetailCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Classic"
                                    android:textSize="12sp"
                                    android:textColor="#999999"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/productDetailStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available"
                                android:textSize="12sp"
                                android:textColor="#48BB78"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Customization Options -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customization Options"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/customizationOptionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Extra Cheese Option -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Extra Cheese"
                                android:textSize="14sp"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LKR 200"
                                android:textSize="14sp"
                                android:textColor="#E53E3E"
                                android:layout_marginEnd="8dp" />

                        </LinearLayout>

                        <!-- Add Pepperoni Option -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add Pepperoni"
                                android:textSize="14sp"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LKR 250"
                                android:textSize="14sp"
                                android:textColor="#E53E3E"
                                android:layout_marginEnd="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Add New Customization Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <EditText
                            android:id="@+id/newOptionNameEditText"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Option name"
                            android:textSize="14sp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/newOptionPriceEditText"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:hint="Price"
                            android:textSize="14sp"
                            android:paddingHorizontal="12dp"
                            android:inputType="numberDecimal"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/addCustomizationButton"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@drawable/chip_bg"
                            android:text="Add"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:paddingHorizontal="16dp"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/cancelButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_bg"
                            android:text="Cancel"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/markUnavailableButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_bg"
                            android:text="Mark Unavailable"
                            android:textColor="#E53E3E"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/editProductButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/chip_bg"
                            android:text="Edit Product"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAllCaps="false" />

                        <ImageView
                            android:id="@+id/deleteProductButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/deleteicon"
                            android:background="@drawable/chip_bg"
                            android:padding="12dp"
                            app:tint="#FFFFFF"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>